---
apiVersion: v1
baseDomain: ${domain}
compute: 
- hyperthreading: Enabled 
  name: worker
  replicas: ${workers_number} 
controlPlane: 
  hyperthreading: Enabled 
  name: master
  replicas: ${masters_number} 
metadata:
  name: ${clusterid} 
networking:
  machineNetwork:
  - cidr: ${network_cidr}
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23 
  serviceNetwork: 
  - 172.30.0.0/16
  networkType: OVNKubernetes 
%{ if lb_bool == false && sno_install == false ~}
platform:
  baremetal:
    apiVIPs: 
    - ${api_vip}
    ingressVIPs: 
    - ${ingress_vip}
%{ if dhcp_bool == false && lb_bool == false ~}
    hosts:
%{ for master in master_details ~}
    - name: "${master.name}"
      role: "master"
      bootMACAddress: "${master.mac}"
%{ endfor ~}
%{ for worker in worker_details ~}
    - name: "${worker.name}"
      role: "master"
      bootMACAddress: "${worker.mac}"
%{ endfor ~}
%{ endif ~}
%{ else ~}
platform:
  none: {}
%{ endif ~}
